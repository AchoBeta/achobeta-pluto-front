{
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "bundler", // 设置 baseUrl 为项目根目录
    "paths": {
      "@/*": [
        "src/*"
      ] // 定义路径别名
    },
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true, // 启用文件名大小写一致检查
    "strict": true // 启用严格模式
  },
  "include": [
    "vite.config.ts"
  ]
}
